{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "index.js",
    "dist"
  ]
}
